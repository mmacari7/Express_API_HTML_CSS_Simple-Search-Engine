<!-- Handlebars for the search results -->

<head>
    <meta charset="utf-8">
    <title>People Found</title>
    <link rel='stylesheet' href="/public/site.css">
</head>

<body>
    <article class="people">
        <h1>People Found</h1>
        <h2>{{people.searchTerm}}</h2>
        <main>
            {{#if people.personsArray.length}}
            <ul>
                {{#each people.personsArray}}
                <li>
                    <a href="/details/{{this.id}}">{{this.firstName}} {{this.lastName}}</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p class="not-found">We're sorry, but no results were found for {{people.searchTerm}}.</p>
            {{/if}}

        </main>
        <a href="/">Make another search</a>
    </article>
</body>